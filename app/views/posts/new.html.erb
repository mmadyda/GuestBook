<h2>Dodawanie nowego wpisu</h2>

<%= form_for @post do |f| %>
    <div class="from-group">
        <%= f.label :autor, "Autor"%>
        <%= f.text_field :autor, class: "form-control"%>
    </div>

    <div class="from-group">
        <%= f.label :body, "Treść"%>
        <%= f.text_area :body, class: "form-control"%>
    </div>
    <%= f.submit "Dodaj wpis", class: "btn btn-default"%>
<% end %>